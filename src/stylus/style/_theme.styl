// Nope. Not Roboto. ;)
$body-font-family = 'Open Sans', sans-serif
$font-size-root = 14px
$line-height-root = 1.5

$theme = {
  primary: $deep-purple.base
  accent: $deep-purple.base
  secondary: $brand-secondary
  info: $blue.base
  warning: $amber.base
  error: $red.base
  success: $green.base
}

// Light Theme
$material-light = {
  status-bar: {
    regular: $brand-light-grey,
    lights-out: rgba($brand-light-grey, .7)
  },
  app-bar: #fff,
  background: lighten($brand-light-grey, 80%),
  cards: #FFFFFF,
  chips: {
    background: $grey.lighten-5,
    color: $material-light.text.secondary
  },
  dividers: rgba(0, 0, 0, 0.12),
  text: {
    theme: #fff,
    primary: $brand-dark,
    secondary: lighten($brand-dark, 5%),
    disabled: lighten($brand-dark, 7%),
    link: $theme.secondary,
    link-hover: darken($material-light.text.link, 5%)
  },
  icons: {
    active: lighten($brand-dark, 5%),
    inactive: lighten($brand-dark, 7%)
  },
  buttons: {
    disabled: lighten($brand-dark, 10%),
    focused: $brand-dark,
    focused-alt: #fff,
    pressed: lighten($brand-dark, 10%)
  },
  expansion-panels: {
    focus: $brand-light-grey
  },
  selection-controls: {
    active: $teal.base,
    thumb: {
      inactive: $grey.lighten-5,
      disabled: $grey.lighten-1
    },
    track: {
      inactive: rgba(#000, .38),
      disabled: rgba(#000, .12)
    }
  },
  slider: {
    active: rgba(#000, .38),
    inactive: rgba(#000, .26),
    disabled: rgba(#000, .26),
    discrete: #000
  },
  tabs: {
    active: $theme.primary,
    inactive: rgba(#000, .70)
  },
  input-bottom-line: rgba(#000, .42),
  stepper: {
    active: rgba(#fff, 1),
    completed: rgba(#000, 0.87),
    hover: rgba(#000, 0.54)
  },
  table: {
    active: $grey.lighten-4
    hover: $grey.lighten-3
  },
  picker: {
    buttons: #fff,
    date: $theme.primary,
    title: $theme.primary,
    body: #fff,
    clock: $grey.lighten-2
  },
  bg-color: #fff
  fg-color: #000
  text-color: $brand-secondary
  primary-text-percent: .87
  secondary-text-percent: .54
  disabledORhints-text-percent: .38
  divider-percent: .02
  active-icon-percent: .54
  inactive-icon-percent: .38
}

$material-dark = {
  status-bar: {
    regular: $brand-secondary,
    lights-out: rgba($brand-secondary, .2)
  },
  app-bar: $brand-secondary,
  background: lighten($brand-secondary, 10%),
  cards: lighten($brand-secondary, 12%),
  chips: {
    background: darken($brand-secondary, 3%),
    color: $brand-light-grey
  },
  dividers: rgba(#fff, 0.1),
  text: {
    theme: $brand-light-grey,
    primary: $brand-light-grey,
    secondary: $brand-grey,
    disabled: darken($brand-grey, 10%),
    link: $theme.accent,
    link-hover: $grey.lighten-3
  },
  icons: {
    active: #fff,
    inactive: rgba(#fff, .5)
  },
  buttons: {
    disabled: rgba(#fff, .3),
    focused: rgba(#fff, .12),
    focused-alt: rgba(#fff, .1),
    pressed: rgba(#ccc, .25)
  },
  expansion-panels: {
    focus: rgba(#000, .70)
  },
  selection-controls: {
    active: $teal.lighten-3,
    thumb: {
      inactive: $grey.lighten-1,
      disabled: $grey.darken-3
    },
    track: {
      inactive: rgba(#fff, .3),
      disabled: rgba(#fff, .1)
    }
  },
  slider: {
    active: rgba(#fff, .3),
    inactive: rgba(#fff, .2),
    disabled: rgba(#fff, .2),
    discrete: #fff
  },
  tabs: {
    active: #fff,
    inactive: rgba(#fff, .7)
  },
  input-bottom-line: rgba(#fff, .7),

  stepper: {
    active: rgba(#fff, 1),
    completed: rgba(#fff, 0.87),
    hover: rgba(#fff, 0.75)
  },
  table: {
    active: #505050
    hover: $grey.darken-2
  },
  picker: {
    date: $theme.accent,
    title: $grey.darken-2,
    body: lighten($brand-secondary, 12%),
    clock: $grey.darken-2,
    buttons: rgba(#000, .87)
  },
  bg-color: $brand-secondary
  fg-color: $brand-light-grey
  text-color: $brand-light-grey
  primary-text-percent: 1
  secondary-text-percent: .70
  disabledORhints-text-percent: .50
  divider-percent: .12
  active-icon-percent: 1
  inactive-icon-percent: .50
}

// Default Material Theme
// ============================================================
$material-theme = $material-dark
$material-twelve-percent-light = rgba($material-dark.fg-color, $material-dark.divider-percent)
$material-twelve-percent-dark = rgba($material-light.fg-color, $material-light.divider-percent)

// Theme
// ============================================================
$body-bg-light = $material-light.background
$body-bg-dark = $material-dark.background
$body-color-light = rgba($material-dark.text-color, $material-dark.primary-text-percent)
$body-color-dark = rgba($material-light.text-color, $material-light.primary-text-percent)
$color-theme = rgba($material-theme.text-color, $material-theme.primary-text-percent)
